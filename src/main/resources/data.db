DROP TABLE IF EXISTS ticket;
DROP TABLE IF EXISTS employee;
 
CREATE TABLE employee(
  id INT AUTO_INCREMENT  PRIMARY KEY,
  name VARCHAR(250) NOT NULL,
  password VARCHAR(250) DEFAULT NULL
);
 
