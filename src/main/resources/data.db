CREATE TABLE ticket (
  id INT AUTO_INCREMENT  PRIMARY KEY,
  empid INT NOT NULL,
  type VARCHAR(200),
  desc VARCHAR(500) DEFAULT NULL,
  FOREIGN KEY (empid) REFERENCES employee(id)
);
 
